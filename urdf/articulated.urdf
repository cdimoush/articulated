<?xml version="1.0"?>
<robot name="articulated">

<!---............................. Link Definitions ................................-->
  
  <link name="base">
    <visual>
      <geometry>
        <mesh filename="file:///$(find articulated)/meshes/base.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <mesh filename="file:///$(find articulated)/meshes/link1.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <link name="link2">
    <visual>
      <geometry>
        <mesh filename="file:///$(find articulated)/meshes/link2.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

<!---............................. Joint Definitions ................................-->

  <joint name="j1" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <limit effort="1000.0" lower="-2.96" upper="2.96" velocity="0.5"/>
  </joint>

  <joint name="j2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 0 1"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <limit effort="1000.0" lower="-2.96" upper="2.96" velocity="0.5"/>
  </joint>

</robot>